# PostgreSQL Configuration
POSTGRES_USER=maintenance
POSTGRES_PASSWORD=maintenance
POSTGRES_DB=maintenance

# Database Host Configuration
# For local development (running app outside Docker): use localhost
# For Docker deployment (running app inside Docker): use postgres_database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database Connection URL
# For local development:
DATABASE_URL=postgres://maintenance:maintenance@localhost:5432/maintenance?sslmode=disable
# For Docker deployment, uncomment the line below:
# DATABASE_URL=postgres://maintenance:maintenance@postgres_database:5432/maintenance?sslmode=disable

# Application Configuration
SERVER_PORT=9999
ALLOW_ORIGINS=http://localhost:5173
SECRET=maintenance

# Docker Configuration (optional)
API_REPLICAS=2

# Environment indicator
ENV=local

JWT_SECRET=7JI*&TYYUH

# Development Notes:
# 1. This is a template file - copy to .env.local or .env.deploy
